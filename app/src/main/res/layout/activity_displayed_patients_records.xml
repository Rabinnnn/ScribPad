<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose_file">


    <ImageView
        android:id="@+id/imageViewSymptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTreatment"
        app:layout_constraintStart_toStartOf="@+id/imageViewTreatment"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder_foreground" />

    <ImageView
        android:id="@+id/imageViewTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNotes"
        app:layout_constraintStart_toStartOf="@+id/imageViewNotes"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/folder_foreground" />

    <ImageView
        android:id="@+id/imageViewNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/folder_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/symptoms"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSymptoms"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSymptoms" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="@string/treatment"
        app:layout_constraintStart_toStartOf="@+id/imageViewTreatment"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTreatment" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/notes"
        app:layout_constraintStart_toStartOf="@+id/imageViewNotes"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>